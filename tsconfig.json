{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": { 
            "*": [ "./*" ]
        },
        "outDir": "/dist",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "allowJs": true,
        "sourceMap": true,
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types", "types"]
    },
    "include": [
        "client/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
